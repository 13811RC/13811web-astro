---
import Button from '@ui/buttons/ButtonSubmit.astro';

interface Props {
    id: string,
    placeholder?: string,
    descriptor?: string,
    width?: string,
    fontsize?: number,
    icon?: string,
    color?: string,
    disabled?: boolean
}
const {id, placeholder = "Enter text here...", descriptor = "Form Element", width, fontsize = 1, icon, color, disabled} = Astro.props;
const remFont = fontsize + "rem";
---

<label for={id} class="text">{descriptor}</label>
<div class="submit">
<input id={id} name={id} placeholder={placeholder} class="text" disabled={disabled}>
</input>
<Button disabled={disabled}>Submit</Button>
</div>

<style define:vars={{remFont, width}}>
    input {
        padding: .5rem 1rem;
        width: var(--width);
        margin: .5rem 0;
        border: 1px solid var(--far-bg);
        border-bottom: 4px solid var(--accent-red);
        border-radius: .75rem .75rem 0 0;
        background-color: var(--subtle-bg);
        font-size: var(--remFont);
        box-shadow: 0 2px 2px 0 var(--colored-bg);
        transition: all 0.3s;
        margin-right: 0.5rem;
    }
    input:disabled {
        background: var(--far-bg);
        border-bottom: 4px solid var(--fg);
    }
    input:disabled::placeholder {
        color: gray;
    }
    input:hover {
        background-color: var(--far-bg);
    }
    input:focus {
        background-color: var(--fg-colored);
        outline: none;
    }
    input:focus::placeholder {
            color: var(--text);
            opacity: 80%;
    }
    .submit {
        display: flex;
        flex-direction: row;
        align-items: center;
    }

</style>